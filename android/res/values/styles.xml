<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="@android:style/Theme">
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>

    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="label">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1C1C1C</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="view_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#cccccc</item>
    </style>
	
	<style name="next_button_normal">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:src">@drawable/next_normal</item>
	</style>
	<style name="next_button_pressed">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:src">@drawable/next_pressed</item>
	</style>
	
	<style name="previous_button_normal">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:src">@drawable/prev_normal</item>
	</style>
	<style name="previous_button_pressed">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:src">@drawable/prev_pressed</item>
	</style>

</resources>