<?xml version="1.0" encoding="utf-8"?>
<TableLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0">
    <TableRow >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
        android:textColor="#000000" 
        android:layout_marginTop="10dip">

        <ImageView
            android:id="@+id/authorAvatar"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:orientation="vertical"
            android:textSize="12dp" >

            <TextView
                android:id="@+id/authorName"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
            	android:textStyle="bold"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="12dip"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical" 
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/boardName"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:gravity="right"
                android:paddingRight="34dp"
                android:layout_weight="1"
            	android:textStyle="bold"
            	android:textSize="12sp"
                android:text=""
                android:textColor="#5c5c5c" />
        </LinearLayout>
    </RelativeLayout>

    </TableRow>
    
    <TableRow
        android:id="@+id/permImageParent"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:paddingBottom="10dip">
            <ImageView
            android:id="@+id/permImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dip" 
            android:scaleType="fitCenter"
            android:src="@drawable/icon"
            android:layout_gravity="center_vertical"
            android:background="#dddadd" />
                        
    </TableRow>
    
    <TableRow >

           <TextView
                android:layout_width="fill_parent"
                android:id="@+id/permDesc"
                android:layout_span="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Perm Description"
                android:textColor="#4c566c"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">

           <TextView
                android:layout_width="fill_parent"
                android:id="@+id/permInfo"
                android:layout_span="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="via username onto category" />
    </TableRow>
    <TableRow >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
         <Button
                    android:id="@+id/btnRepem"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_bg_new"
                    android:text="@string/bt_reperm"
                    android:textColor="#000000" 
                    android:layout_marginLeft="10dp"/>
        <Button
                    android:id="@+id/btnLike"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_bg_new"
                    android:text="@string/bt_like"
                    android:textColor="#000000" 
                    android:layout_marginLeft="10dp"/>
         <Button
                    android:id="@+id/btnComment"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_bg_new"
                    android:text="@string/bt_comment"
                    android:textColor="#000000" 
                    android:layout_marginLeft="10dp"/>
          <ImageView
            android:id="@+id/btnLocation"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginRight="5dip" 
            android:src="@drawable/location_icon" />
         </LinearLayout>
    </TableRow>
    <TableRow>

           <TextView
                android:layout_width="fill_parent"
                android:id="@+id/permStat"
                android:layout_span="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                 />
    </TableRow>
    
    <TableRow>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentInput"
            android:orientation="vertical">
        </LinearLayout>
    </TableRow>
    
    <TableRow >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comments"
            android:orientation="vertical"
            >
            
            
            
        </LinearLayout>
    </TableRow>
    <TableRow>

            <!-- Horizonal split line -->

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:padding="5dp" >

                <View
                    android:id="@+id/item_separator"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </TableRow>
</TableLayout>